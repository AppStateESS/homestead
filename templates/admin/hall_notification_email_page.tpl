<h1>Send Hall Message</h1>

{START_FORM}
<div class="row">
    <div class="col-md-8">
        <!-- BEGIN anonymous -->
        <div class="form-group">
            <label>
                {ANONYMOUS} {ANONYMOUS_LABEL_TEXT}
            </label>
        </div>
        <!-- END anonymous -->

        <div class="form-group">
            {SUBJECT_LABEL}
            {SUBJECT}
        </div>

        <div class="form-group">
            {BODY_LABEL}
            {BODY}
        </div>

        <button type="submit" class="btn btn-success">Review Message <i class="fa fa-chevron-right"></i></button>

    </div>
</div>
{END_FORM}
