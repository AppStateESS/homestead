<h2>Accept Learning Community Invitation</h2>

<div class="row">
  <p class="col-md-9">
    You have been invited to the <strong>{COMMUNITY_NAME}</strong> Residential Learning Community for {TERM}.
  </p>
</div>

{START_FORM}

  <div class="col-md-9">
    <div class="row">
      <div class="col-md-6">
        <div class="radio">
          <label>
            {ACCEPTANCE_1}
            {ACCEPTANCE_1_LABEL}
          </label>
        </div>

        <div class="radio">
          <label>
            {ACCEPTANCE_2}{ACCEPTANCE_2_LABEL}
          </label>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="checkbox">
        <label>
          {TERMS_COND}
          {TERMS_COND_LABEL}
        </label>
      </div>
    </div>

    <div class="row">
      <button type="submit" class="btn btn-lg btn-success">
        Submit
      </button>
    </div>
  </div>

{END_FORM}
